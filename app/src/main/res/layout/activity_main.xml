<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <!-- Animated background with waves ONLY (no gradient) - now behind logo -->
    <it.teateonair.app.AnimatedBackgroundView
        android:id="@+id/backgroundGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Background Image (now on top of waves) - centered and half size -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_rtoa_background"
        android:scaleType="fitCenter"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.35" />

    <!-- Top system bar spacer -->
    <View
        android:id="@+id/topInsetSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Centered container for main boxes with texts -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxContainer"
        android:layout_width="346dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toTopOf="@id/playerBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInsetSpacer"
        app:layout_constraintVertical_bias="0.15">

        <!-- BOXES AT TOP -->
        <ImageView
            android:id="@+id/box1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/schedule_desc"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_schedule"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/box2"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <ImageView
            android:id="@+id/box2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/programs_desc"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_programs"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/box1"
            app:layout_constraintEnd_toStartOf="@id/box3" />

        <ImageView
            android:id="@+id/box3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/about_us_desc"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_whoweare"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/box2"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- TEXT LABELS BELOW BOXES -->
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/palinsesto_podcast"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/box1"
            app:layout_constraintStart_toStartOf="@id/box1"
            app:layout_constraintEnd_toEndOf="@id/box1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/programmi"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/box2"
            app:layout_constraintStart_toStartOf="@id/box2"
            app:layout_constraintEnd_toEndOf="@id/box2" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chi_siamo"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/box3"
            app:layout_constraintStart_toStartOf="@id/box3"
            app:layout_constraintEnd_toEndOf="@id/box3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- FUTURISTIC PLAYER BAR (now above social media) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerBar"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/futuristic_player_bar_bg"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/socialMediaBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Animated black waves background for player -->
        <it.teateonair.app.PlayerAnimatedBackgroundView
            android:id="@+id/playerBackgroundWaves"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/futuristic_play_button_background"
            android:elevation="20dp"
            android:fontFamily="sans-serif-black"
            android:stateListAnimator="@null"
            android:text="▶"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:gravity="center"
            android:paddingStart="3dp"
            android:visibility="visible"
            android:shadowColor="#00FF88"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/futuristic_stop_button"
                android:contentDescription="Ferma riproduzione"
                android:elevation="12dp"
                android:stateListAnimator="@null"
                android:text="■"
                android:textColor="#FF4444"
                android:textSize="20sp"
                android:shadowColor="#FF4444"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_title"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.1"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:shadowColor="#00FF88"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4" />

                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/sample_artist"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textSize="11sp"
                    android:textColor="#B0B0B0"
                    android:letterSpacing="0.15"
                    android:singleLine="true"
                    android:ellipsize="end" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eqLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom|end" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MODERN FUTURISTIC SOCIAL MEDIA BOX (now below player) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/socialMediaBox"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/modern_social_box_background"
        android:elevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomInsetSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Modern Title with Glow Effect -->
        <TextView
            android:id="@+id/socialTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follow_us"
            android:textColor="#00FF88"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.2"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:shadowColor="#00FF88"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Futuristic Social Icons Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/socialTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/socialFacebook"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/social_icon_ripple_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_facebook_social"
                    android:contentDescription="@string/facebook_desc"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:elevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/socialInstagram"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/social_icon_ripple_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_instagram_social"
                    android:contentDescription="@string/instagram_desc"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:elevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/socialTikTok"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/social_icon_ripple_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_tiktok_social"
                    android:contentDescription="@string/tiktok_desc"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:elevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp">

                <ImageView
                    android:id="@+id/socialYouTube"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/social_icon_ripple_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_youtube_social"
                    android:contentDescription="@string/youtube_desc"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:elevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom system bar spacer -->
    <View
        android:id="@+id/bottomInsetSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>