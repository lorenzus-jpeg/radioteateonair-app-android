<?xml version="1.0" encoding="utf-8"?>
<!--
    Main Activity Layout - Radio Teate OnAir (RESPONSIVE)
    Features:
    - Animated wave background
    - Four top navigation boxes (Schedule, Programs, About Us, Options) - RESPONSIVE
    - Centered logo - RESPONSIVE
    - Player control bar with animated waves - RESPONSIVE
    - Social media icons - RESPONSIVE
    Author: lorenzus-jpeg
    Modified: Full responsive design for all screen sizes
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- ==================== BACKGROUND ==================== -->

    <!-- Animated background with green/white waves -->
    <it.teateonair.app.AnimatedBackgroundView
        android:id="@+id/backgroundGradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ==================== SYSTEM BARS ==================== -->

    <!-- Top system bar spacer (status bar) -->
    <View
        android:id="@+id/topInsetSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ==================== TOP NAVIGATION BOXES (RESPONSIVE) ==================== -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/topInsetSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Box 1: Schedule/Palinsesto -->
        <ImageView
            android:id="@+id/box1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/schedule_desc"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_schedule"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/box2"
            app:layout_constraintWidth_min="50dp"
            app:layout_constraintWidth_max="90dp"
            app:layout_constraintHeight_min="50dp"
            app:layout_constraintHeight_max="90dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Box 2: Programs/Programmi -->
        <ImageView
            android:id="@+id/box2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/programs_desc"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_programs"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/box1"
            app:layout_constraintEnd_toStartOf="@id/box3"
            app:layout_constraintWidth_min="50dp"
            app:layout_constraintWidth_max="90dp"
            app:layout_constraintHeight_min="50dp"
            app:layout_constraintHeight_max="90dp"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Box 3: About Us/Chi Siamo -->
        <ImageView
            android:id="@+id/box3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/about_us_desc"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_whoweare"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/box2"
            app:layout_constraintEnd_toStartOf="@id/box4"
            app:layout_constraintWidth_min="50dp"
            app:layout_constraintWidth_max="90dp"
            app:layout_constraintHeight_min="50dp"
            app:layout_constraintHeight_max="90dp"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Box 4: My Options/Le Mie Opzioni -->
        <ImageView
            android:id="@+id/box4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/opzioni"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_settings"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/box3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_min="50dp"
            app:layout_constraintWidth_max="90dp"
            app:layout_constraintHeight_min="50dp"
            app:layout_constraintHeight_max="90dp"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Label 1: Schedule text -->
        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/palinsesto_podcast"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/box1"
            app:layout_constraintStart_toStartOf="@id/box1"
            app:layout_constraintEnd_toEndOf="@id/box1"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Label 2: Programs text -->
        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/programmi"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/box2"
            app:layout_constraintStart_toStartOf="@id/box2"
            app:layout_constraintEnd_toEndOf="@id/box2"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Label 3: About Us text -->
        <TextView
            android:id="@+id/text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/chi_siamo"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/box3"
            app:layout_constraintStart_toStartOf="@id/box3"
            app:layout_constraintEnd_toEndOf="@id/box3"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Label 4: My Options text -->
        <TextView
            android:id="@+id/text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/opzioni"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/box4"
            app:layout_constraintStart_toStartOf="@id/box4"
            app:layout_constraintEnd_toEndOf="@id/box4"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ==================== CENTERED LOGO ==================== -->

    <!-- Main radio logo - centered and semi-transparent, responsive sizing -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_rtoa_background"
        android:scaleType="fitCenter"
        android:alpha="0.6"
        android:contentDescription="@string/app_name"
        android:importantForAccessibility="no"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/boxContainer"
        app:layout_constraintBottom_toTopOf="@id/playerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ==================== PLAYER CONTROL BAR (RESPONSIVE) ==================== -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerBar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/futuristic_player_bar_bg"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/socialMediaBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Start/Play button - shown initially -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/futuristic_play_button_background"
            android:elevation="20dp"
            android:fontFamily="sans-serif-black"
            android:stateListAnimator="@null"
            android:text="▶"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="3dp"
            android:visibility="visible"
            android:contentDescription="@string/play_radio"
            android:shadowColor="@color/green_primary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlSymmetry" />

        <!-- Bottom bar - shown when playing (contains stop button and song info) -->
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="UseCompoundDrawables"
            tools:visibility="visible">

            <!-- Stop button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/futuristic_stop_button"
                android:contentDescription="@string/stop_radio"
                android:elevation="12dp"
                android:stateListAnimator="@null"
                android:text="■"
                android:textColor="#FF4444"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingTop="0dp"
                android:paddingBottom="2dp"
                android:shadowColor="#FF4444"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="8" />

            <!-- Song information container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                tools:ignore="UseCompoundDrawables">

                <!-- Song title - scrolling marquee -->
                <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_title"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:shadowColor="@android:color/transparent"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="0"
                    tools:text="SAMPLE SONG TITLE" />

                <!-- Artist name -->
                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/sample_artist"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:letterSpacing="0.15"
                    android:singleLine="true"
                    android:ellipsize="end"
                    tools:text="Sample Artist" />
            </LinearLayout>

            <!-- Equalizer layout (currently unused) -->
            <LinearLayout
                android:id="@+id/eqLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom|end"
                android:visibility="gone"
                tools:visibility="gone" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ==================== SOCIAL MEDIA BOX (RESPONSIVE) ==================== -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/socialMediaBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/modern_social_box_background"
        android:elevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomInsetSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- "Follow Us" title with glow effect -->
        <TextView
            android:id="@+id/socialTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follow_us"
            android:textColor="@color/green_primary"
            android:textSize="13sp"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.2"
            android:gravity="center"
            android:shadowColor="@color/green_primary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Social media icons row -->
        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/socialTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

                <!-- Facebook icon -->
                <ImageView
                    android:id="@+id/socialFacebook"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/social_icon_ripple_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_facebook_social"
                    android:contentDescription="@string/facebook_desc"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:elevation="4dp" />

                <!-- Instagram icon -->
                <ImageView
                    android:id="@+id/socialInstagram"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/social_icon_ripple_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_instagram_social"
                    android:contentDescription="@string/instagram_desc"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:elevation="4dp" />

                <!-- TikTok icon -->
                <ImageView
                    android:id="@+id/socialTikTok"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/social_icon_ripple_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_tiktok_social"
                    android:contentDescription="@string/tiktok_desc"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:elevation="4dp" />

                <!-- YouTube icon -->
                <ImageView
                    android:id="@+id/socialYouTube"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/social_icon_ripple_background"
                    android:padding="8dp"
                    android:src="@drawable/ic_youtube_social"
                    android:contentDescription="@string/youtube_desc"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:elevation="4dp" />

                <!-- Spotify icon -->
                <ImageView
                    android:id="@+id/socialSpotify"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/social_icon_ripple_background"
                    android:padding="8dp"
                    android:src="@drawable/social_spotify"
                    android:contentDescription="@string/spotify_desc"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:elevation="4dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ==================== SYSTEM BARS ==================== -->

    <!-- Bottom system bar spacer (navigation bar) -->
    <View
        android:id="@+id/bottomInsetSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>