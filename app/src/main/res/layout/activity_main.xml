<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <!-- Smooth animated background -->
    <it.radioteateonair.app.AnimatedBackgroundView
        android:id="@+id/backgroundGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top system bar spacer -->
    <View
        android:id="@+id/topInsetSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo with responsive sizing -->
    <ImageView
        android:id="@+id/logo_toa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/logo_margin_top"
        android:layout_marginHorizontal="@dimen/logo_margin_horizontal"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo_description"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_toa"
        app:layout_constraintTop_toBottomOf="@id/topInsetSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="@dimen/logo_max_height"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintDimensionRatio="H,16:9" />

    <!-- Centered container for small boxes -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxContainer"
        android:layout_width="@dimen/box_container_width"
        android:layout_height="@dimen/box_container_height"
        app:layout_constraintTop_toBottomOf="@id/logo_toa"
        app:layout_constraintBottom_toTopOf="@id/playerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- Top row boxes -->
        <ImageView
            android:id="@+id/box1"
            android:layout_width="@dimen/small_box_size"
            android:layout_height="@dimen/small_box_size"
            android:layout_margin="@dimen/small_box_margin"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/small_box_padding"
            android:contentDescription="@string/calendar_description"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_calendar"
            app:tint="#008000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/box2"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <ImageView
            android:id="@+id/box2"
            android:layout_width="@dimen/small_box_size"
            android:layout_height="@dimen/small_box_size"
            android:layout_margin="@dimen/small_box_margin"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/small_box_padding"
            android:contentDescription="@string/programs_description"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mic"
            app:tint="#008000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/box1"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bottom row boxes -->
        <ImageView
            android:id="@+id/box3"
            android:layout_width="@dimen/small_box_size"
            android:layout_height="@dimen/small_box_size"
            android:layout_margin="@dimen/small_box_margin"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/small_box_padding"
            android:contentDescription="@string/about_description"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_group"
            app:tint="#008000"
            app:layout_constraintTop_toBottomOf="@id/box1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/box4"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <ImageView
            android:id="@+id/box4"
            android:layout_width="@dimen/small_box_size"
            android:layout_height="@dimen/small_box_size"
            android:layout_margin="@dimen/small_box_margin"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/small_box_padding"
            android:contentDescription="@string/social_description"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_social"
            app:tint="#008000"
            app:layout_constraintTop_toBottomOf="@id/box2"
            app:layout_constraintStart_toEndOf="@id/box3"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Player Bar with modern styling -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/player_bar_height"
        android:layout_marginBottom="@dimen/player_bar_margin_bottom"
        android:background="@drawable/modern_player_bar_bg"
        app:layout_constraintBottom_toTopOf="@id/bottomInsetSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startButton"
            android:layout_width="@dimen/start_button_size"
            android:layout_height="@dimen/start_button_size"
            android:background="@drawable/modern_play_button"
            android:elevation="8dp"
            android:fontFamily="sans-serif"
            android:stateListAnimator="@null"
            android:text="▶"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/start_button_text_size"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/bottom_bar_padding"
            android:paddingEnd="@dimen/bottom_bar_padding"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playButton"
                android:layout_width="@dimen/play_button_size"
                android:layout_height="@dimen/play_button_size"
                android:background="@drawable/modern_stop_button"
                android:backgroundTint="@null"
                android:contentDescription="@string/stop_description"
                android:elevation="6dp"
                android:stateListAnimator="@null"
                android:text="■"
                android:textColor="#008000"
                android:textSize="@dimen/play_button_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="@dimen/song_info_padding">

                <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_title"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="@font/orbitron_regular"
                    android:textSize="@dimen/song_title_text_size"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.05"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/artist_name_margin_top"
                    android:text="@string/sample_artist"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="@font/orbitron_regular"
                    android:textSize="@dimen/artist_name_text_size"
                    android:textColor="#EEEEEE"
                    android:letterSpacing="0.05"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eqLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom|end" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom system bar spacer -->
    <View
        android:id="@+id/bottomInsetSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>