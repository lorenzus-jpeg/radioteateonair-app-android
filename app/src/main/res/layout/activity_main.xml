<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <!-- Animated background with waves -->
    <it.radioteateonair.app.AnimatedBackgroundView
        android:id="@+id/backgroundGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top system bar spacer -->
    <View
        android:id="@+id/topInsetSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo_toa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="false"
        android:contentDescription="Radio Teate OnAir Logo"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_toa"
        app:layout_constraintTop_toBottomOf="@id/topInsetSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25" />

    <!-- Centered container for main boxes with texts -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxContainer"
        android:layout_width="346dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toTopOf="@id/socialMediaBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_toa"
        app:layout_constraintVertical_bias="0.402">

        <!-- TEXT LABELS AT TOP -->
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PALINSESTO"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/box1"
            app:layout_constraintEnd_toEndOf="@id/box1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROGRAMMI"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/box2"
            app:layout_constraintEnd_toEndOf="@id/box2" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHI SIAMO"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/box3"
            app:layout_constraintEnd_toEndOf="@id/box3" />

        <!-- BOXES BELOW TEXTS -->
        <ImageView
            android:id="@+id/box1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:contentDescription="Palinsesto"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_schedule"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/box2"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <ImageView
            android:id="@+id/box2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:contentDescription="Programmi"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_programs"
            app:layout_constraintTop_toBottomOf="@id/text2"
            app:layout_constraintStart_toEndOf="@id/box1"
            app:layout_constraintEnd_toStartOf="@id/box3" />

        <ImageView
            android:id="@+id/box3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:contentDescription="Chi siamo"
            android:focusable="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_whoweare"
            app:layout_constraintTop_toBottomOf="@id/text3"
            app:layout_constraintStart_toEndOf="@id/box2"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/socialMediaBox"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/social_media_box_background"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/playerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Social Media Icons in single horizontal line -->
        <ImageView
            android:id="@+id/socialFacebook"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="12dp"
            android:background="@drawable/social_media_icon_background"
            android:padding="12dp"
            android:src="@drawable/ic_facebook_social"
            android:contentDescription="Facebook"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/socialInstagram"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <ImageView
            android:id="@+id/socialInstagram"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="12dp"
            android:background="@drawable/social_media_icon_background"
            android:padding="12dp"
            android:src="@drawable/ic_instagram_social"
            android:contentDescription="Instagram"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/socialFacebook"
            app:layout_constraintEnd_toStartOf="@id/socialTikTok" />

        <ImageView
            android:id="@+id/socialTikTok"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="12dp"
            android:background="@drawable/social_media_icon_background"
            android:padding="12dp"
            android:src="@drawable/ic_tiktok_social"
            android:contentDescription="TikTok"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/socialInstagram"
            app:layout_constraintEnd_toStartOf="@id/socialYouTube" />

        <ImageView
            android:id="@+id/socialYouTube"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="12dp"
            android:background="@drawable/social_media_icon_background"
            android:padding="12dp"
            android:src="@drawable/ic_youtube_social"
            android:contentDescription="YouTube"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/socialTikTok"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Player Bar - BIGGER green section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerBar"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/modern_player_bar_bg"
        app:layout_constraintBottom_toTopOf="@id/bottomInsetSpacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/modern_play_button"
            android:elevation="8dp"
            android:fontFamily="sans-serif"
            android:stateListAnimator="@null"
            android:text="▶"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/modern_stop_button"
                android:backgroundTint="@null"
                android:contentDescription="Ferma riproduzione"
                android:elevation="6dp"
                android:stateListAnimator="@null"
                android:text="■"
                android:textColor="#008000"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titolo Esempio"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="@font/orbitron_regular"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.05"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Artista Esempio"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="@font/orbitron_regular"
                    android:textSize="14sp"
                    android:textColor="#EEEEEE"
                    android:letterSpacing="0.05"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eqLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom|end" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom system bar spacer -->
    <View
        android:id="@+id/bottomInsetSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>