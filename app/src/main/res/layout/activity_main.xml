<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/logo_toa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_toa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="144dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toTopOf="@id/playerBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/box1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:contentDescription="Calendar"
            android:padding="70dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_calendar"
            app:tint="#008000" />


        <ImageView
            android:id="@+id/box2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:contentDescription="Mic"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mic"
            app:tint="#008000" />


        <ImageView
            android:id="@+id/box3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:contentDescription="Chi siamo"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:src="@drawable/ic_group"
            app:tint="#008000" />

        <ImageView
            android:id="@+id/box4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:background="@drawable/box_background"
            android:clickable="true"
            android:contentDescription="Social"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_social"
            app:tint="#008000" />

        <!--TextView
            android:id="@+id/box5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Box 5"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@drawable/box_background"
            android:clickable="true" />

        <TextView
            android:id="@+id/box6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Box 6"
            android:textSize="16sp"
            android:background="@drawable/box_background"
            android:clickable="true" / -->
    </GridLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        android:background="#008000"
        app:layout_constraintBottom_toTopOf="@id/insetSpacer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startButton"
            android:layout_width="100sp"
            android:layout_height="90sp"
            android:backgroundTint="#008000"
            android:elevation="0dp"
            android:fontFamily="sans-serif"
            android:stateListAnimator="@null"
            android:text="▶"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_white_button"
                android:backgroundTint="@null"
                android:contentDescription="Stop"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:text="■"
                android:textColor="#008000"
                android:textSize="24sp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Titolo Esempio"
                    android:fontFamily="@font/orbitron_regular"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/orbitron_regular"
                    android:gravity="center"
                    android:text="Artista Esempio"
                    android:textAlignment="center"
                    android:textColor="#EEEEEE"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eqLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="0"
                android:gravity="bottom|end"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/insetSpacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
