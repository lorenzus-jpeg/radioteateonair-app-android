<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Modern green circle base - SAME GREEN AS APP WAVES -->
    <path
        android:pathData="M54,54m-36,0a36,36 0,1 1,72 0a36,36 0,1 1,-72 0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:angle="45"
                android:startColor="#00B400"
                android:endColor="#00B444"
                android:type="radial"
                android:centerX="0.3"
                android:centerY="0.3"
                android:gradientRadius="0.8" />
        </aapt:attr>
    </path>

    <!-- Modern "T" with MUCH longer vertical line -->
    <group android:translateX="54" android:translateY="49">
        <!-- T shadow for depth -->
        <path
            android:pathData="M-15,-12 L17,-12 L17,-2 L6,-2 L6,28 L-4,28 L-4,-2 L-15,-2 Z"
            android:fillColor="#000000"
            android:fillAlpha="0.15" />

        <!-- Main T letter -->
        <path
            android:pathData="M-16,-13 L16,-13 L16,-3 L5,-3 L5,27 L-5,27 L-5,-3 L-16,-3 Z"
            android:fillColor="#FFFFFF" />

        <!-- Inner highlight on T -->
        <path
            android:pathData="M-14,-11 L14,-11 L14,-5 L3,-5 L3,25 L-3,25 L-3,-5 L-14,-5 Z"
            android:fillColor="#FFFFFF"
            android:fillAlpha="0.4" />
    </group>

</vector>